# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

##
## mpd "extention":
##
## github.com/Gravemind/i3status
##

general {
        colors = true
        interval = 1
        output_format = i3bar
        color_good = "#A3D572"
        color_degraded = "#EFBD8B"
        color_bad = "#D370A3"
}

order += "cpu_usage"
order += "disk /"
order += "volume master"
order += "ethernet enp4s0"
order += "tztime local"

#mpd {
#    format_up = "à %artist-%title"
#    format_down = "à -"
#    host = "127.0.0.1"
#    port = 6600
#}

wireless wlp5s0 {
        format_up = "¤ %quality"
        format_down = "¤ down"
}

ethernet enp0s3 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

ethernet enp4s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "¡ %status %percentage"
        #format_down = "ð -"
        integer_battery_capacity = "true"
        last_full_capacity = "true"
        low_threshold = 20
        threshold_type = "percentage"
}

volume master {
        format = "S %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%a %d/%m %H:%M:%S"
}

cpu_usage {
        format = "CPU %usage"
}

cpu_temperature 0 {
        format = "Ç %degrees°C"
        max_threshold = 60
}

load {
        format = "%1min"
}

disk "/" {
        format = "/ %avail"
}
