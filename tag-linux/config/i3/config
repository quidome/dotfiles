set $right     l

# Applications
set $term       /usr/bin/kitty
set $menu       /usr/bin/rofi
set $lock       xset s activate && sleep 1
set $web        /usr/local/bin/browser
set $files      $term /usr/bin/ranger # New terminal instance for ranger
set $processes  $term /usr/bin/gotop
set $pass       ~/bin/rofipass
set $screenshot /usr/bin/flameshot gui

### Appearance
