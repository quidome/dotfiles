# Custom config here
# border style <normal|1pixel>

new_window pixel 1

# window colors
# class                 border  backgr. text    indicator
client.focused          #303030 #686868 #ffffff #2e9ef4
client.focused_inactive #333333 #303030 #ffffff #484e50
client.unfocused        #333333 #222222 #cfcfcf #292d2e
client.urgent           #d370a3 #ffa7da #ffffff #ffa7da

# window rules
# use xprop to match windows
for_window [class="^(Gcolor2|Gnome-keyring-prompt-3|Gcr-prompter|MPlayer|mpv|Sxiv)$"] floating enable
for_window [class="^(Pinentry-gtk-2)$"] floating enable
for_window [class="^(MPlayer|mpv)$"] border normal
for_window [class="^Firefox$" title="^Library$"] floating enable
for_window [class="^Firefox$" title="^Library$"] border normal

# assign the following to specific workspaces
assign [window_role="^browser$"] $ws2
assign [class="^([Ee]macs)$"] $ws3
assign [class="^(Gajim|[Tt]elegram([Dd]esktop)?|HipChat|[Cc]utegram)$"] $ws4
assign [class="^(Riot)$"] $ws4
assign [title="^Signal$"] $ws4
assign [class="^(Thunar|Zathura)$"] $ws5

# take screenshot with PrtSc key
bindsym Print exec --no-startup-id scrot -e 'mv $f ~/pictures/screenshots/ 2>/dev/null'
bindsym mod1+Print exec --no-startup-id import -window "$(xdotool getwindowfocus -f)" ~/pictures/screenshots/snapwin-$(date +%F_%H%M%S_%N).png

# laptop screen brightness
bindsym XF86MonBrightnessDown exec "brightnessctl s 5%-"
bindsym XF86MonBrightnessUp exec "brightnessctl s 5%+"

# keyboard led brightness
bindsym XF86KbdBrightnessDown exec "brightnessctl -d smc::kbd_backlight s 5%-"
bindsym XF86KbdBrightnessUp exec "brightnessctl -d smc::kbd_backlight s 5%+"

# volume control
bindsym XF86AudioRaiseVolume exec "pamixer -i 3"
bindsym XF86AudioLowerVolume exec "pamixer -d 2"
bindsym XF86AudioMute exec "pamixer -t"




