### Key bindings
#
# Basics:
#
# start a terminal
bindsym $mod+Return exec --no-startup-id $term

# kill focused window
bindsym $mod+Shift+q kill

# show program launchers; all (d) or desktop (p)
bindsym $mod+d exec rofi -show run
# bindsym $mod+p exec rofi -show drun
# bindsym $mod+Shift+b exec $web
# bindsym $mod+Shift+p exec $pass

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# reload the configuration file
bindsym $mod+Shift+c reload

#
# My custom binds:
#
    ## Applications
    # Launch firefox chooser
    bindsym $mod+Shift+b exec $web
    # Launch file browser
    bindsym $mod+n exec $files
    # Launch process viewer
    bindsym $mod+t exec $processes
    # Launch menu
    bindsym $mod+p exec $menu -show drun
    # Launch gopass prompt
    bindsym $mod+Shift+p exec $pass

    ## custom power menu
    set $control power
    bindsym $mod+Shift+e mode "$control"

    mode "$control" {
        bindsym p exec --no-startup-id systemctl poweroff, mode "default"
        bindsym r exec --no-startup-id systemctl reboot, mode "default"
        bindsym k exec --no-startup-id i3-msg exit, mode "default"
        bindsym l exec --no-startup-id $lock, mode "default"
        bindsym s exec --no-startup-id systemctl suspend, mode "default"
        bindsym Escape mode "default"
    }

# x/autorandr keybindings
bindsym $mod+x exec autorandr -c
bindsym $mod+Shift+x exec autorandr_menu

