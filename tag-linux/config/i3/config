# take screenshot with PrtSc key
bindsym Print exec --no-startup-id scrot -e 'mv $f ~/pictures/screenshots/ 2>/dev/null'
bindsym mod1+Print exec --no-startup-id import -window "$(xdotool getwindowfocus -f)" ~/pictures/screenshots/snapwin-$(date +%F_%H%M%S_%N).png

# volume control
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master '3%+'"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master '2%-'"

