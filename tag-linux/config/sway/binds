# -*- mode: Conf;-*-
# sway key bindings

# take screenshots
# use prtscr(Print) or F13(XF86Tools)
bindsym --release Shift+XF86Tools exec grim -g \"$(slurp)\" - | wl-copy
bindsym --release XF86Tools exec grim - | wl-copy

# region copy & file
bindsym Print exec IMG=~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%M-%s).png && grim -g "$(slurp)" $IMG && wl-copy < $IMG
bindsym XF86Tools exec IMG=~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%M-%s).png && grim -g "$(slurp)" $IMG && wl-copy < $IMG
# fullscreen copy & file
bindsym Shift+Print exec IMG=~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%M-%s).png && grim $IMG && wl-copy < $IMG
bindsym Shift+XF86Tools exec IMG=~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%M-%s).png && grim $IMG && wl-copy < $IMG

# laptop screen brightness
bindsym XF86MonBrightnessDown exec "brightnessctl s 5%-"
bindsym XF86MonBrightnessUp exec "brightnessctl s 5%+"

# media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# volume control
bindsym XF86AudioRaiseVolume exec "pamixer -i 3"
bindsym XF86AudioLowerVolume exec "pamixer -d 2"
bindsym XF86AudioMute exec "pamixer -t"

# more screen lock combox
bindsym $mod+XF86Eject exec --no-startup-id xset s activate
